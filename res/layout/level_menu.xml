<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_wallpaper"
    android:columnCount="6"
    android:orientation="horizontal"
    android:rowCount="3"
    tools:context=".GridXMLActivity"
    tools:targetApi="14" >

    <Space />

    <Button
        android:id="@+id/level01"
        android:layout_column="0"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_row="0"
        android:height="80dp"
        android:text="1"
        android:textSize="30dp"
        android:width="100dp" />

    <Button
        android:id="@+id/level02"
        android:layout_column="1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_row="0"
        android:height="80dp"
        android:text="2"
        android:textSize="30dp"
        android:width="100dp" />

    <Button
        android:id="@+id/level03"
        android:layout_column="2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_row="0"
        android:height="80dp"
        android:text="3"
        android:textSize="30dp"
        android:width="100dp" />

    <Button
        android:id="@+id/level04"
        android:layout_column="3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_row="0"
        android:height="80dp"
        android:text="4"
        android:textSize="30dp"
        android:width="100dp" />

    <Button
        android:id="@+id/level05"
        android:layout_column="4"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_row="0"
        android:height="80dp"
        android:text="5"
        android:textSize="30dp"
        android:width="100dp" />

    <Button
        android:id="@+id/level06"
        android:layout_column="0"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_row="1"
        android:height="80dp"
        android:text="6"
        android:textSize="30dp"
        android:width="100dp" />

    <Button
        android:id="@+id/level07"
        android:layout_column="1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_row="1"
        android:height="80dp"
        android:text="7"
        android:textSize="30dp"
        android:width="100dp" />

    <Button
        android:id="@+id/level08"
        android:layout_column="2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_row="1"
        android:height="80dp"
        android:text="8"
        android:textSize="30dp"
        android:width="100dp" />

    <Button
        android:id="@+id/level09"
        android:layout_column="3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_row="1"
        android:height="80dp"
        android:text="9"
        android:textSize="30dp"
        android:width="100dp" />

    <Button
        android:id="@+id/level10"
        android:layout_column="4"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_row="1"
        android:height="80dp"
        android:text="10"
        android:textSize="30dp"
        android:width="100dp" />

    <Button
        android:id="@+id/EXIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="75dp"
        android:layout_row="2"
        android:height="40dp"
        android:text="EXIT"
        android:width="80dp" />

</GridLayout>